<xml>
	<!-- This file holds info for laying out the Golf Solitaire card game. -->
	
	<!-- The multiplier is multiplied by the x and y attributes below. -->
	<!-- This determines how loose or tight the layout is. --> 
	<multiplier x="5" y="1.2" />
	
	<!-- In the XML below, id is the number of the card -->
	<!-- x and y set position -->
	<!-- faceup is 1 if the card is face-up -->
	<!-- layer sets the depth layer so cards overlap properly -->
	<!-- hiddenby is the ids of cards that keep a card face-down -->
	
	<!--7 slots per row, 5 rows per column-->
	<!-- Layer0, the deepest cards. Slot 0-6-->
	<slot id="0" x="-3" y="5" faceup="1" layer="0" hiddenby="7" />
	<slot id="1" x="-2"  y="5" faceup="1" layer="0" hiddenby="8" />
	<slot id="2" x="-1"  y="5" faceup="1" layer="0" hiddenby="9" />
	<slot id="3" x="0"  y="5" faceup="1" layer="0" hiddenby="10" />
	<slot id="4" x="1"  y="5" faceup="1" layer="0" hiddenby="11" />
	<slot id="5" x="2"  y="5" faceup="1" layer="0" hiddenby="12" />
	<slot id="6" x="3"  y="5" faceup="1" layer="0" hiddenby="13" />
	
	<!-- Layer1, the next level. Slot 7-13-->
	<slot id="7" x="-3" y="4" faceup="1" layer="1" hiddenby="14" />
	<slot id="8" x="-2" y="4" faceup="1" layer="1" hiddenby="15" />
	<slot id="9" x="-1" y="4" faceup="1" layer="1" hiddenby="16" />
	<slot id="10" x="0" y="4" faceup="1" layer="1" hiddenby="17" />
	<slot id="11" x="1" y="4" faceup="1" layer="1" hiddenby="18" />
	<slot id="12" x="2" y="4" faceup="1" layer="1" hiddenby="19" />
	<slot id="13" x="3" y="4" faceup="1" layer="1" hiddenby="20" />
	
	
	<!-- Layer2, the next level. Slot 14-20-->
	<slot id="14"  x="-3" y="3" faceup="1" layer="2" hiddenby="21" />
	<slot id="15"  x="-2" y="3" faceup="1" layer="2" hiddenby="22" />
	<slot id="16"  x="-1" y="3" faceup="1" layer="2" hiddenby="23" />
	<slot id="17"  x="0" y="3" faceup="1" layer="2" hiddenby="24" />
	<slot id="18"  x="1" y="3" faceup="1" layer="2" hiddenby="25" />
	<slot id="19"  x="2" y="3" faceup="1" layer="2" hiddenby="26" />
	<slot id="20"  x="3" y="3" faceup="1" layer="2" hiddenby="27" />

	
	
	<!-- Layer3,level. Slot 21-27-->
	<slot id="21" x="-3" y="2" faceup="1" layer="3" hiddenby="28"/>
	<slot id="22" x="-2" y="2" faceup="1" layer="3" hiddenby="29"/>
	<slot id="23" x="-1" y="2" faceup="1" layer="3" hiddenby="30"/>
	<slot id="24" x="0" y="2" faceup="1" layer="3" hiddenby="31"/>
	<slot id="25" x="1" y="2" faceup="1" layer="3" hiddenby="32"/>
	<slot id="26" x="2"  y="2" faceup="1" layer="3" hiddenby="33"/>
	<slot id="27" x="3"  y="2" faceup="1" layer="3" hiddenby="34"/>

	<!-- Layer4, the top layer, lowest level. Slot 28-33-->
	<slot id="28" x="-3" y="1" faceup="1" layer="4" />
	<slot id="29" x="-2" y="1" faceup="1" layer="4" />
	<slot id="30" x="-1" y="1" faceup="1" layer="4" />
	<slot id="31" x="0" y="1" faceup="1" layer="4" />
	<slot id="32" x="1" y="1" faceup="1" layer="4" />
	<slot id="33" x="2" y="1" faceup="1" layer="4" />
	<slot id="34" x="3" y="1" faceup="1" layer="4" />

	
	<!-- This positions the draw pile and staggers it -->
	<slot type="drawpile" x="-1" y="-4" xstagger="-0.02" layer="4"/>
	
	<!-- This positions the discard pile and target card -->
	<slot type="discardpile" x="1" y="-4" layer="5"/>
	
</xml>
	